.row
  .col-md-offset-2.col-md-8.col-sm-12
    .page-header.text-center
      h1 =t 'new_path', entity: "#{t 'activerecord.models.course'}"
    .panel.panel-default
      .panel-heading =t 'activerecord.models.course'
      .panel-body
        = simple_form_for @course, validate: true do |f|
          = f.input :name, input_html: {class:'form-control'}, wrapper_html: { class: 'form-group' }
          = f.input :description, input_html: {class:'form-control'}, wrapper_html: { class: 'form-group' }
          = f.submit class: 'btn btn-primary'
